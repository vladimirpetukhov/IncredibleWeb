{
  "extends": ["plugin:react/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "createClass": "createReactClass",
      "pragma": "React",
      "version": "16.7.0",
      "flowVersion": "0.53"
    },
    "propWrapperFunctions": [
      "forbidExtraProps",
      { "property": "freeze", "object": "Object" }
    ]
  },
  "rules": {
    "no-unreachable": "warn",
    "no-empty": "warn",
    "no-unused-expressions": "warn",
    "no-unused-vars": "warn",
    "no-use-before-define": "error",
    "no-extra-semi": "warn",
    "jsx-quotes": "error",
    "no-const-assign": "error",
    "no-this-before-super": "error",
    "no-var": "error",
    "react/prop-types": 0
  },
  "plugins": ["react"]
}
